#!/bin/bash

cols=$(tput cols)

banner=(
"  ______                                   __                      __        _______                   __       __  _______   _______   "
" /      \                                 |  \                    |  \      |       \                 |  \     /  \|       \ |       \  "
"|  ######\  ______    ______    ______   _| ##_     ______    ____| ##      | #######\ __    __       | ##\   /  ##| #######\| #######\ "
"| ##   \## /      \  /      \  |      \ |   ## \   /      \  /      ##      | ##__/ ##|  \  |  \      | ###\ /  ###| ##__/ ##| ##  | ## "
"| ##      |  ######\|  ######\  \######\ \######  |  ######\|  #######      | ##    ##| ##  | ##      | ####\  ####| ##    ##| ##  | ## "
"| ##   __ | ##   \##| ##    ## /      ##  | ## __ | ##    ##| ##  | ##      | #######\| ##  | ##      | ##\## ## ##| #######\| ##  | ## "
"| ##__/  \| ##      | ########|  #######  | ##|  \| ########| ##__| ##      | ##__/ ##| ##__/ ##      | ## \###| ##| ##__/ ##| ##__/ ## "
" \##    ##| ##       \##       \##    ##   \##  ## \##       \##    ##      | ##    ## \##    ##      | ##  \# | ##| ##    ##| ##    ## "
"  \######  \##        \#######  \#######    \####   \#######  \#######       \#######  _\#######       \##      \## \#######  \#######  "
"                                                                                      |  \__| ##                                        "
"                                                                                       \##    ##                                        "
"                                                                                        \######                                         "
)

separator=$(printf '=%.0s' $(seq 1 $cols))

created() (
    echo "$separator"

    for line in "${banner[@]}"; do
        padding=$(( (cols - ${#line}) / 2 ))
        printf "%*s%s\n" "$padding" "" "$line"
    done

    echo "$separator"
)



help () (
    created
    echo -e "This script are used for helping in rdesktop command"
    echo -e " -u - User Login\n -p - Password\n -r - Window Scale\n -h - Help"
    echo -e "Exemple:\n rdp -u user -p password 127.0.0.1:3389"
)

if [[ "$1" == "-u" && "$3" == "-p" && "$5" == "-r" && -n "$7" ]]; then
    created
    rdesktop -g $6 -P -z -x l -u "$2" -p "$4" "$7"
elif [[ "$1" == "-u" && "$3" == "-p" && -n "$5" ]]; then
    created
    rdesktop -g 1900x1000 -P -z -x l -u "$2" -p "$4" "$5"
elif [[ "$1" == "-u" && -n "$3" ]]; then
    created
    rdesktop -g 1900x1000 -P -z -x l -u "$2" "$3"
else 
    help
fi

